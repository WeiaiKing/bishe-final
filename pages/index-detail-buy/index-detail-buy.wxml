<view id="container">
  <view id="notice">
    <van-notice-bar mode="closeable" text="提示:平台支持同城送货上门！" />
  </view>
  <view id="address_cell">
    <van-cell-group>
      <van-cell title="广西钦州市钦南区北部湾大学西四115号" title-width="615rpx;" label="姓名 111111" border="{{ false }}" icon="/images/address1.png" color="red" is-link url="/pages/user-address/user-address" title-class="cell_title" />
    </van-cell-group>
    <view style="display:flex;">
      <block wx:for="{{10}}" wx:key="index">
        <view style="background:#607fcb;height:6rpx;width:30rpx;margin-right:15rpx;"></view>
        <view style="background:#f17d8b;width:30rpx;height:6rpx;margin-right:15rpx;"></view>
      </block>

    </view>
  </view>
  <view id="commodity">
    <van-card num="2" price="2.00" desc="手工生日礼物" title="蝴蝶风筝" thumb="https://picsum.photos/200" />
    <van-divider/>
  </view>
  <view id="bottom-content">
    <view class="bottom_flex">
      <span>商品原价</span>
      <span style="color:#ff4d94">￥230.4</span>
    </view>
    <van-divider/>
    <view class="bottom_flex">
      <span>商品优惠</span>
      <span style="color:#ff4d94">-￥27</span>
    </view>
    <van-divider/>
    <view style="text-align:right;height:80rpx;margin-top:40rpx;">
      <span>合计</span>
      <span style="color:#ff4d94">￥163.4</span>
    </view>
  </view>
  <view id="popup ">
    <van-popup show="{{ popup }}" position="bottom" round custom-style="height: 65%;" bind:close="onClose">
        <view style="text-align:center;margin-top:30rpx">选择上门时间</view>
        <view style="height:2rpx;background:#e8e8e8;margin:15rpx 30rpx"></view>
      <view class="dialog">
        <view class="dialog_right">
          <van-button color="#f1f1f1" size="small" round>周一(4月1日)</van-button>
          <van-button color="#f1f1f1" size="small" round style="margin:15rpx 0;">周二(4月2日)</van-button>
          <van-button color="#f1f1f1" size="small" round>周三(4月3日)</van-button>
          <van-button color="#f1f1f1" size="small" round style="margin:15rpx 0;">周四(4月4日)</van-button>
          <van-button color="#f1f1f1" size="small" round>周五(4月5日)</van-button>
          <van-button color="#f1f1f1" size="small" round style="margin:15rpx 0;">周六(4月6日)</van-button>
        </view>
        <view class="dialog_left">
          <van-button color="#f1f1f1" size="small" round>10:00-11:00</van-button>
          <van-button color="#f1f1f1" size="small" round style="margin:15rpx 0;">11:00-12:00</van-button>
          <van-button color="#f1f1f1" size="small" round>12:00-13:00</van-button>
          <van-button color="#f1f1f1" size="small" round style="margin:15rpx 0;">13:00-14:00</van-button>
          <van-button color="#f1f1f1" size="small" round>14:00-15:00</van-button>
          <van-button color="#f1f1f1" size="small" round style="margin:15rpx 0;">15:00-16:00</van-button>
          <van-button color="#f1f1f1" size="small" round>16:00-17:00</van-button>
        </view>
      </view>
      <view class="dialog-confirm">
        <van-button type="warning" round bindtap="buy_confirm">确定</van-button>
      </view>
    </van-popup>

  </view>
  <view style="height:20rpx;"></view>
  <!-- 底部部分 -->
  <view class="bottom">
    <view>
      <span>需支付</span>
      <span style="color:#ff4d94;">￥163.4</span>
    </view>
    <van-button type="info" round color="#ff4d94" bindtap="{{baoming}}">去支付</van-button>
  </view>
</view>