/* header */

#header {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  position: relative;
}

.header_background_img {
  width: 100%;
  height: 300rpx;
  filter: blur(20rpx);
  transform: scale(3);
}

.header_img {
  width: 300rpx;
  height: 400rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -200rpx;
  z-index: 99;
}

/* de_body */

#de_body {
  padding: 30rpx;
}

.de_body_price {
  margin: 15rpx 0;
  display: flex;
}

.de_body_price .discount {
  width: 80rpx;
  text-align: center;
  color: #eb4d3d;
  border: 1px solid #eb4d3d;
  height: 40rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
}

button:not([size='mini']) {
  /* stylesheetmin-height: 80rpx; */
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}
/* popup */
.dialog_cart {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 420rpx;
  padding: 30rpx 30rpx 0 30rpx;
}
/* content-bottom */
#content-bottom {
  padding: 30rpx 20rpx;
}

/* 格子 */

.van-grid-item__content {
  padding: var(--grid-item-content-padding, 14px 8px 0 8px) !important;
}
