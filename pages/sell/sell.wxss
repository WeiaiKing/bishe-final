.book_list image {
    width: 180rpx;
    height: 230rpx;
}

.book_list {
    margin: 20rpx;
    /* border: 1px solid darkcyan; */
    display: flex;
}

.book_list_item {
    margin-left: 15rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.line {
    width: 100%;
    height: 2rpx;
    background: #fcfcfc;
}

.step image {
    width: 280rpx;
    height: 300rpx;
}

.step {
    font-size: 40rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.open {
    display: inline-block;
    color: #ff8780;
    font-size: 30rpx;
}

.scan {
    background: #ff8780;
    width: 300rpx;
    height: 75rpx;
    border-radius: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 30rpx;
    left: 50%;
    margin-left: -150rpx;
}
