/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* button隐藏样式 start*/

.auth {
    position: relative;
    margin-bottom: 15rpx;
}

.auth > .btn {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    opacity: 0;
}

.auth > .btn button {
    height: 100%;
    width: 100%;
}

/* button隐藏样式 end */